<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewEntity"
            type="kuu.nagoya.feature.dashboard.viewentity.ContractViewEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/plan_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="28dp"
            android:text="@{viewEntity.planName}"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ファミリープラン" />

        <TextView
            android:id="@+id/service_code_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewEntity.serviceCode}"
            app:layout_constraintStart_toStartOf="@id/plan_name_text_view"
            app:layout_constraintTop_toBottomOf="@id/plan_name_text_view"
            tools:text="hddxxxxx" />

        <TextView
            android:id="@+id/estimate_volume_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@{viewEntity.remainVolume}"
            app:layout_constraintBottom_toBottomOf="@id/service_code_text_view"
            app:layout_constraintEnd_toEndOf="@+id/plan_name_text_view"
            app:layout_constraintStart_toEndOf="@id/service_code_text_view"
            app:layout_constraintTop_toTopOf="@id/service_code_text_view"
            tools:text="残容量:8GB" />

        <ProgressBar
            android:id="@+id/loading_contract_progress_ring"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/plan_name_text_view"
            app:layout_constraintEnd_toStartOf="@id/navigate_setting_page_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/service_code_text_view" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sim_list_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/service_code_text_view"
            tools:listitem="@layout/item_dashboard_sim" />

        <ProgressBar
            android:id="@+id/sim_list_progress_ring"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/sim_list_recycler_view"
            app:layout_constraintEnd_toEndOf="@id/sim_list_recycler_view"
            app:layout_constraintStart_toStartOf="@id/sim_list_recycler_view"
            app:layout_constraintTop_toTopOf="@id/sim_list_recycler_view" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/edit_coupon_button"
            style="@style/Button.Big"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="クーポンを切り替える"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/navigate_setting_page_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="18dp"
            android:layout_marginBottom="32dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_settings_24px"
            android:tint="@color/primaryColor"
            app:layout_constraintBottom_toTopOf="@+id/sim_list_recycler_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>